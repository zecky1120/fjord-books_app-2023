<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %><br />
  <%= f.text_area :self_introduction %>
</div>

<% if @user.avatar.attached? %>
  <div class="field">
    <strong>現在のユーザーアイコン</strong><%= image_tag @user.avatar.variant(resize_to_limit: [150, 150], format: :jpg) %>
  </div>
<% end %>

<div class="field">
  <%= f.label :avatar %>
  <%= f.file_field :avatar, accept: '.jpg, .png, .gif' %>
</div>
