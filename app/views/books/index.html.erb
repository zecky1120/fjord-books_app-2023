<p style="color: green"><%= notice %></p>

<h1><%= t '.title' %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
  <div class="index-item">
    <%= render book %>
    <p>
      <%= link_to t('defaults.btn_show'), book %>
    </p>
  </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t('defaults.btn_new'), new_book_path %>
</nav>
