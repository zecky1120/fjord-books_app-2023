<p style="color: green"><%= notice %></p>

<h1><%= t('.title', item: Book.model_name.human) %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
  <div class="index-item">
    <%= render book %>
    <p>
      <%= link_to t('.show'), book %>
    </p>
  </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to t('.new', item: Book.model_name.human), new_book_path %>
</nav>
